journal = {The Journal of molecular diagnostics : JMD},
month = {jan},
number = {1},
pages = {109--17},
pmid = {19948821},
publisher = {American Society for Investigative Pathology},
title = {{The effect of primer-template mismatches on the detection and quantification of nucleic acids using the 5' nuclease assay.}},
