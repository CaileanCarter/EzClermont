journal = {Microbiology},
month = {may},
number = {5},
pages = {980--988},
publisher = {Microbiology Society},
title = {{Guide to the various phylogenetic classification schemes for Escherichia coli and the correspondence among schemes}},
url = {http://www.microbiologyresearch.org/content/journal/micro/10.1099/mic.0.000063},
volume = {161},
year = {2015}
}
